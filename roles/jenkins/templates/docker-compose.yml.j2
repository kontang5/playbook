services:
  jenkins:
    image: {{ jenkins_image }}
    container_name: {{ jenkins_container_name }}
    restart: unless-stopped
    ports:
      - "{{ jenkins_port }}:8080"
      - "{{ jenkins_agent_port }}:50000"
    volumes:
      - jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/login"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

volumes:
  jenkins_home:
