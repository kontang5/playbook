services:
  redis:
    image: {{ redis_image }}
    container_name: {{ redis_container_name }}
    restart: unless-stopped
    ports:
      - "{{ redis_port }}:6379"
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  redis_data:
